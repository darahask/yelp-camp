<%- include('../partials/header') %>
<div class="container">
  <div class="row">
    <div style="width: 30%; margin: 100px auto;">
      <h3 style="text-align: center;">Edit <%=camp.name%></h1>
      <form action="/campgrounds/<%=camp._id%>?_method=PUT" method="POST">
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            value="<%=camp.name%>"
            placeholder="Name"
            name="camp[name]"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="number"
            placeholder="Price"
            name="camp[price]"
            min="0.01"
            step="0.01"
            value="<%=camp.price%>"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            placeholder="Image"
            value="<%=camp.image%>"
            name="camp[image]"
          />
        </div>
        <div class="form-group">
          <textarea name="camp[description]" class="form-control" rows="5" placeholder="Description"><%=camp.description%></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>
      </form>
      <a href="/campgrounds">Go back</a>
    </div>
  </div>
</div>
<%- include('../partials/footer') %>