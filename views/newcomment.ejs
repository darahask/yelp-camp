<%- include('partials/header') %>

<div class="container">
    <div class="row">
      <div style="width: 30%; margin: 100px auto;">
        <h3 style="text-align: center;">Add new Comment to <%=camp.name%></h1>
        <form action="/campgrounds/<%=camp._id%>/comments" method="POST">
          <div class="form-group">
            <input
              class="form-control"
              type="text"
              placeholder="Comment"
              name="comment[text]"
            />
          </div>
          <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit</button>
          </div>
        </form>
        <a href="/campgrounds">Go back</a>
      </div>
    </div>
  </div>

<%- include('partials/footer') %>
